<Window
    x:Class="SkillChat.Client.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:SkillChat.Client.ViewModel;assembly=SkillChat.Client.ViewModel"
    xmlns:views="clr-namespace:SkillChat.Client.Views"
    Title="SkillChat.Client"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <viewModel:MainWindowViewModel />
    </Design.DataContext>
    <Grid>
        <Grid ColumnDefinitions="72, *">
            <StackPanel Background="#7F57F0">
                <Image
                    Height="64"
                    Margin="16,10"
                    Source="/Assets/SkillChatLogo_small.png" />
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.Background>
                    <ImageBrush
                        Source="/Assets/Chat_background.png"
                        Stretch="UniformToFill"
                        TileMode="Tile" />
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Background="#F2F2F2" ColumnDefinitions="Auto, *">

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontWeight="Medium"
                        Text="Чат" />

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button Command="{Binding LoadMessageHistoryCommand}" Content="Загрузить более старые сообщения" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="20,0"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderThickness="0"
                            Items="{Binding Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,5" HorizontalAlignment="Left">
                                        <Border
                                            Padding="10,5"
                                            Background="White"
                                            BorderThickness="0">
                                            <Grid RowDefinitions="Auto,Auto">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontWeight="Medium" Text="{Binding UserLogin}" />
                                                    <TextBlock
                                                        Margin="10,0,0,0"
                                                        Foreground="#828282"
                                                        Text="{Binding Time}" />
                                                </StackPanel>
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Text="{Binding Text}"
                                                    TextWrapping="Wrap" />
                                            </Grid>
                                        </Border>
                                        <Polyline
                                            Fill="White"
                                            Points="0,0 50,0 0,10"
                                            StrokeThickness="0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                <Grid
                    Grid.Row="2"
                    Height="50"
                    Margin="20,10">
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding MessageText}"
                        TextWrapping="Wrap" />

                    <Button
                        x:Name="sendButton"
                        Width="30"
                        Height="30"
                        Margin="10"
                        Padding="0"
                        HorizontalAlignment="Right"
                        BorderThickness="0"
                        Command="{Binding SendCommand}">
                        <Image Source="/Assets/Arrow.png" Stretch="Fill" />
                    </Button>
                </Grid>



            </Grid>
        </Grid>

        <views:LoginPage VerticalAlignment="Stretch" IsVisible="{Binding !IsLoggedIn, Mode=OneWay}" />
    </Grid>
</Window>
