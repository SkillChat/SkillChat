<Window
    x:Class="SkillChat.Client.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="clr-namespace:Svg.Skia.Avalonia;assembly=Svg.Skia.Avalonia"
    xmlns:viewModel="clr-namespace:SkillChat.Client.ViewModel;assembly=SkillChat.Client.ViewModel"
    xmlns:views="clr-namespace:SkillChat.Client.Views"
    Title="SkillChat.Client"
    d:DesignHeight="600"
    d:DesignWidth="800"
    MinWidth="300"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <viewModel:MainWindowViewModel />
    </Design.DataContext>
    <Grid>
        <Grid ColumnDefinitions="100, *">
            <StackPanel Background="#7F57F0">
                <Image Width="60" Margin="20">
                    <Image.Source>
                        <svg:SvgImage Source="/Assets/SkillChat_small.svg" />
                    </Image.Source>
                </Image>
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.Background>
                    <ImageBrush
                        Source="/Assets/Chat_background.png"
                        Stretch="UniformToFill"
                        TileMode="Tile" />
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Background="#F2F2F2" ColumnDefinitions="Auto, *">

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontWeight="Medium"
                        Text="Чат" />

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button Command="{Binding LoadMessageHistoryCommand}" Content="Загрузить более старые сообщения" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="20,0"
                            VerticalAlignment="Bottom"
                            Background="Transparent"
                            BorderThickness="0"
                            Items="{Binding Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,5" HorizontalAlignment="Left">
                                        <Border
                                            Padding="10,5"
                                            Background="White"
                                            BorderThickness="0">
                                            <Grid RowDefinitions="Auto,Auto">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontWeight="Medium" Text="{Binding UserLogin}" />
                                                    <TextBlock
                                                        Margin="10,0,0,0"
                                                        Foreground="#828282"
                                                        Text="{Binding Time}" />
                                                </StackPanel>
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Text="{Binding Text}"
                                                    TextWrapping="Wrap" />
                                            </Grid>
                                        </Border>
                                        <Polyline
                                            Fill="White"
                                            Points="0,0 50,0 0,10"
                                            StrokeThickness="0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                <Border
                    Grid.Row="2"
                    MinHeight="50"
                    MaxHeight="270"
                    Margin="0"
                    Background="#F2F2F2"
                    BorderBrush="#F2F2F2"
                    BorderThickness="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox
                            Grid.Column="0"
                            Padding="10,5"
                            AcceptsReturn="True"
                            BorderThickness="0"
                            FontFamily="Open Sans"
                            FontSize="14"
                            Text="{Binding MessageText}"
                            TextWrapping="Wrap"
                            Watermark="Сообщение" />

                        <Button
                            x:Name="sendButton"
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            Padding="0"
                            VerticalAlignment="Bottom"
                            Background="#C4C4C4"
                            BorderThickness="0"
                            Command="{Binding SendCommand}">
                            <Image
                                Name="buttonImage"
                                Width="20"
                                Height="20" />
                            <Button.Styles>
                                <Style Selector="Button /template/ ContentPresenter">
                                    <Setter Property="CornerRadius" Value="2" />
                                </Style>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="BorderBrush" Value="#FF9133" />
                                </Style>
                                <Style Selector="Button Image#buttonImage">
                                    <Setter Property="Source">
                                        <Setter.Value>
                                            <svg:SvgImage Source="/Assets/arrow.svg" />
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style Selector="Button:pointerover Image#buttonImage">
                                    <Setter Property="Source">
                                        <Setter.Value>
                                            <svg:SvgImage Source="/Assets/arrow_orange.svg" />
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style Selector="Button:pressed Image#buttonImage">
                                    <Setter Property="Source">
                                        <Setter.Value>
                                            <svg:SvgImage Source="/Assets/arrow.svg" />
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style Selector="Button:pressed /template/ ContentPresenter">
                                    <Setter Property="Background" Value="#FF9133" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </Grid>
                </Border>



            </Grid>
        </Grid>

        <views:LoginPage VerticalAlignment="Stretch" IsVisible="{Binding !IsLoggedIn, Mode=OneWay}" />
    </Grid>
</Window>
