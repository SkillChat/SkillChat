<UserControl
    x:Class="SkillChat.Client.Views.LoginPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:SkillChat.Client.ViewModel;assembly=SkillChat.Client.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="OpenSans" />
        </Style>
        <Style Selector="TextBlock.UpperWatermark">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#9F81F3" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style Selector="TextBox.LoginInput">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#7F57F0" />
        </Style>
        <Style Selector="Border">
            <Setter Property="CornerRadius" Value="2" />
        </Style>
        <Style Selector="Button /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="2" />
        </Style>
        <Style Selector="Button">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="1" />
            <Setter Property="Background" Value="#D1C0FF" />
            <Setter Property="BorderBrush" Value="#D1C0FF" />
        </Style>
    </UserControl.Styles>

    <Design.DataContext>
        <viewModel:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto,*">
        <Grid.Background>
            <ImageBrush
                Source="/Assets/Login_background.png"
                Stretch="UniformToFill"
                TileMode="Tile" />
        </Grid.Background>

        <StackPanel
            Grid.Row="1"
            Width="380"
            HorizontalAlignment="Center">
            <Image
                Width="180"
                Height="241"
                Margin="0,0,0,64"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Assets/SkillChatLogo.png"
                Stretch="Uniform" />
            <StackPanel>
                <TextBlock Classes="UpperWatermark" Text="Логин / E-mail" />
                <TextBox
                    Height="50"
                    Padding="10"
                    Background="#FFFFFF"
                    BorderBrush="#7F57F0"
                    BorderThickness="2"
                    Classes="LoginInput"
                    Text="{Binding UserName}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>
            <Button
                x:Name="connectButton"
                Grid.Row="2"
                Grid.Column="2"
                Margin="0,30,0,0"
                Padding="10"
                Command="{Binding ConnectCommand}"
                Content="Войти" />
        </StackPanel>

    </Grid>
</UserControl>
