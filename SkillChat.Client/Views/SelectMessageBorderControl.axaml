<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="40"
             x:Class="SkillChat.Client.Views.SelectMessageBorderControl">
	<Border
		Classes="sendMessage"
		IsVisible="{Binding ProfileViewModel.IsShowChat}"
		BorderThickness="10,10,10,10">
		<Grid ColumnDefinitions="Auto,*">
			<Button Grid.Column="0"	
					Command="{Binding}" Classes="CopyToClipboard">
				<Image Name="CopyToClipboard"
					   Width="18"
					   Height="18"/>
			</Button>
			<TextBlock Grid.Column="1" Classes="CopyToClipboard" Text="Скопировать в буфер обмена"/>
		</Grid>
	</Border>	
</UserControl>
