<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="140" d:DesignHeight="30"
             x:Class="SkillChat.Client.Views.Profile.Exit">


    <Border IsVisible="{Binding IsOpenMenu}" ZIndex="10" CornerRadius="2" Background="White" BorderBrush="#FF9337"
            BorderThickness="1">
        <Button
            FontSize="15"
            FontWeight="400"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Classes="SelectedMore"
            Command="{Binding SignOutCommand}"
            Content="Выйти" />
    </Border>

</UserControl>
